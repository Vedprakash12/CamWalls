<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moon_background"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CamWalls1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cam Walls"
            android:layout_marginTop="40dp"
            android:textSize="40sp"
            android:textColor="#DDE3F1"
            android:gravity="center"
            android:id="@+id/CamWall"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/Login"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/CamWalls1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/times_new_roman"
        android:text="Welcome,"
        android:textColor="#DDE3F1"
        android:textSize="40sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/Login1"
        android:layout_width="500dp"
        android:layout_height="50dp"
       android:layout_below="@+id/Login"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/times_new_roman"
        android:text="Lets Start with Login"
        android:textColor="#DDE3F1"
        android:textSize="40sp"
        android:textStyle="normal"/>


    <Button
        android:id="@+id/google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/skip"
        android:layout_centerInParent="true"
        android:background="#bfffffff"
        android:drawableLeft="@drawable/google"
        android:padding="16dp"
        android:text="Sign In With Google"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textColor="#0C0C0C"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skip this Step"
        android:background="#bfffffff"
        android:padding="16dp"
        android:textColor="#0A0A0A"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:id="@+id/skip"
        />



</RelativeLayout>